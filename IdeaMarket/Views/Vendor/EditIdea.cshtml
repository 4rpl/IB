@model IdeaMarket.Controllers.VendorController.Idea
@{
    ViewBag.Title = "Редактировать – Lorem Ipsum";
}

@Html.Partial( "Sidebar" )

<div class="container-fluid">
    <div class="panel panel-default">
        <div class="panel-heading">
            Редактировать идею
        </div>
        <div class="panel-body">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-8 col-md-offset-2">
                        <div class="alert alert-danger">
                            Внимание! После подтверждения изменений идея перейдёт в статус "Ожидает модерации"
                        </div>
                        <div class="form-group-sm">
                            @Html.LabelFor( m => m.Name ):
                            @Html.TextBoxFor( m => m.Name, new { @class = "form-control" } )
                        </div>
                        <div class="form-group-sm">
                            @Html.LabelFor( m => m.ShortDescription ):
                            @Html.TextAreaFor( m => m.ShortDescription, new { @class = "form-control" } )
                        </div>
                        <div class="form-group-sm">
                            @Html.LabelFor( m => m.FullDescription ):
                            @Html.TextAreaFor( m => m.FullDescription, new { @class = "form-control" } )
                        </div>
                        <div class="form-group-sm">
                            <div class="row">
                                <div class="col-md-6">
                                    @Html.LabelFor( m => m.Cost ):
                                    <div class="input-group">
                                        <div class="input-group-addon">$</div>
                                        @Html.TextBoxFor( m => m.Cost, new { @class = "form-control" } )
                                        <div class="input-group-addon">.00</div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <label for="attachments">Файлы</label>:
                                    <input type="file" multiple />
                                </div>
                            </div>
                        </div>
                        <div class="text-right">
                            <input type="button" class="btn btn-default" value="Сохранить как черновик" />
                            <input type="button" class="btn btn-success" value="Сохранить и отправить на модерацию" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>